@model ViewmMODeElMASTER
@{
    ViewData["Title"] = @ResourceWeb.LBLbRoles;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-xs-12">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">User Information</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>
            <span style="color:royalblue"> <strong>@TempData["Delete successful"]</strong></span>
            <span style="color:red"> <strong>@TempData["Delete Error"]</strong></span>

        </ul>
        <!-- /.box-title -->
        <div class="dropdown js__drop_down">
            <a asp-area="Admin" asp-controller="Accounts" asp-action="Register"><button type="button" class="btn btn-violet btn-rounded btn-bordered waves-effect waves-light" style="margin-bottom:20px">Add</button></a>


            <!-- /.sub-menu -->
        </div>
        <!-- /.dropdown js__dropdown -->
        <div id="example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
         

            <div class="row">
                <div class="col-sm-12">
                    <div class='table-responsive'>
                        <div style="overflow-x:auto;">
                            <table id="example" class="table table-striped table-bordered display dataTable" style="width: 100%;" role="grid" aria-describedby="example_info">

                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">@ResourceWeb.LbUserEmage</th>
                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 64px;">@ResourceWeb.LbUserName</th>
                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 64px;">@ResourceWeb.LbUserName</th>
                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 64px;">@ResourceWeb.LbUserPhone</th>
                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 64px;">@ResourceWeb.LbUserEmail</th>
                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 64px;">@ResourceWeb.LbNameRols</th>
                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 64px;">@ResourceWeb.LbActiveUser</th>
                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">@ResourceWeb.LbOpration</th>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbUserEmage</th>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbUserName</th>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbUserName</th>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbUserPhone</th>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbUserEmail</th>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbNameRols</th>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbActiveUser</th>
                                        <th rowspan="1" colspan="1">@ResourceWeb.LbOpration</th>
                                </tfoot>
                                <tbody>
                                            @foreach (var item in Model.Users)
                                            {
                                        <tr role="row" class="odd">
                                            <td class="sorting_1">
                                                <img src="@string.Format("/Images/Users/{0}",item.ImageUser)" class="img-bordered img-circle img-circle"
                                                     style="width:100px; height:100px">
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.UserName</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.Email</td>
                                            <td>@item.Role</td>
                                            <td>
                                                <div class="switch primary"><input type="checkbox" checked="@item.ActiveUser" id="switch-2" disabled><label for="switch-2">@item.ActiveUser</label></div>
                                            </td>
                                            <td>
                                                <ul class="list-inline">


                                                    <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Accounts" asp-action="EditeRegister" asp-route-Id="@item.Id"><button type="button" class="btn btn-primary btn-circle btn-lg waves-effect waves-light"><i class="ico fa fa-edit"></i></button></a></li>|
                                                    <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Accounts" asp-action="DeleteUser" asp-route-userId="@item.Id"><button type="button" class="btn btn-danger btn-circle btn-lg waves-effect waves-light"><i class="ico fa fa-remove"></i></button></a></li>|
                                                    <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Accounts" asp-action="ChangePassword" asp-route-Id="@item.Id"><button type="button" class="btn btn-success btn-circle btn-lg waves-effect waves-light"><i class="ico fa fa-lock"></i></button></a></li>|
                                                    <li class="margin-bottom-10">
                                                        <a asp-area="Admin" asp-controller="Accounts" asp-action="AddEditRolesUser" asp-route-id="@item.Id" asp-route-roleId="@item.RoleId" class="btn btn-violet btn-circle btn-lg waves-effect waves-light">
                                                            <i class="ico fa fa-random"></i>
                                                        </a>
                                                    </li>

                                                </ul>
                                            </td>

                                        </tr>
                                            }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- /.box-content -->
</div>
@section Scripts
{
  
}


