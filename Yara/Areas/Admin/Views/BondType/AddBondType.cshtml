@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddBondType;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box-content">
    <ul class="list-inline">
        <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBAddBondType</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
        <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>
        <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
        <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
    </ul>
    <div class="row small-spacing">
        <div class="col-xs-6">
            <div class="box-content card white">
                <h4 class="box-title">@ResourceWeb.LBAddBondType</h4>
                <!-- /.box-title -->
                <div class="card-content">
                    <form role="form" method="post" asp-controller="BondType" asp-action="Save" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.BondType.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.BondType.IdBondType" class="form-control">
                            <input type="hidden" asp-for="@Model.BondType.DateTimeEntry" value="@DateTime.Now">
                            <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                        </div>
                        <div class="card-content">
                            <div class="row small-spacing">
                                <div class="col-12 col-sm-12">
                                    <label asp-for="@Model.BondType.BondType" for="exampleInputEmail1">@ResourceWeb.LbBondType</label>
                                    <input asp-for="@Model.BondType.BondType" type="text" placeholder="@ResourceWeb.LbBondType ...." class="form-control" maxlength="300">
                                    <span asp-validation-for="@Model.BondType.BondType" class="text-danger"></span>
                                    <span style="color:red"> <strong>@TempData["BondType"]</strong></span>
                                </div>
                                <!-- /.col-xs-3 -->
                                <!-- /.col-xs-4 -->
                                <!-- /.col-xs-5 -->
                            </div>


                            <!-- /.row -->
                        </div>
                        <div class="checkbox margin-bottom-20">
                            <div class="switch success"><input type="checkbox" asp-for="@Model.BondType.Active" id="switch-2"><label for="switch-2">@ResourceWeb.LbActive</label></div>
                        </div>
                        <div class="checkbox margin-bottom-20">
                            <div class="switch success"><input type="checkbox" asp-for="@Model.BondType.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                    </form>
                </div>
                <!-- /.card-content -->
            </div>
            <!-- /.box-content -->
        </div>
    </div>
</div>

@section Scripts {
    @* <script src="~/js/custom-scripts.js"></script> *@
}

