@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddPurchaseDocumentation;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-xs-12">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBAddPurchaseDocumentation</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>
            <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
        </ul>

        <div class="row small-spacing">
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.LBEmageSise</h4>

                    <div class="card-content">
                        <form role="form" method="post" asp-controller="PurchaseDocumentation" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.PurchaseDocumentation.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.PurchaseDocumentation.IdPurchaseDocumentation" class="form-control">
                                <input type="hidden" asp-for="@Model.PurchaseDocumentation.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            </div>

                     

                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-4">
                                        <div class="form-group">
                                            <label asp-for="@Model.PurchaseDocumentation.OrderNumber" for="exampleInputEmail1">@ResourceWeb.LbOrderNumber</label>
                                            <input asp-for="@Model.PurchaseDocumentation.OrderNumber" type="text" placeholder="@ResourceWeb.LbOrderNumber ...." class="form-control" maxlength="50">
                                            <span asp-validation-for="@Model.PurchaseDocumentation.OrderNumber" class="text-danger"></span>
                                            <span style="color:red"><strong>@TempData["PurchaseDocumentation"]</strong></span>
                                        </div>
                                    </div>

                                    <div class="col-12 col-sm-8">
                                        <div class="form-group">
                                            <label asp-for="@Model.PurchaseDocumentation.CostOrder" for="exampleInputEmail1">@ResourceWeb.LbCostOrder</label>
                                            <input asp-for="@Model.PurchaseDocumentation.CostOrder" type="text" placeholder="@ResourceWeb.LbCostOrder ...." class="form-control" maxlength="50"></input>
                                            <span asp-validation-for="@Model.PurchaseDocumentation.CostOrder" class="text-danger"></span>
                                        </div>
                                    </div>


                                </div>
                            </div>

                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-4">
                                        <div class="form-group">
                                            <label asp-for="@Model.PurchaseDocumentation.StartDate" for="exampleInputEmail1">@ResourceWeb.LbStartDate</label>
                                            <input asp-for="@Model.PurchaseDocumentation.StartDate" type="date" placeholder="@ResourceWeb.LbStartDate ...." class="form-control">
                                            <span asp-validation-for="@Model.PurchaseDocumentation.StartDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 col-sm-8">
                                        <div class="form-group">
                                            <label asp-for="@Model.PurchaseDocumentation.TransactionDate" for="exampleInputEmail1">@ResourceWeb.LbTransactionDate</label>
                                            <input asp-for="@Model.PurchaseDocumentation.TransactionDate" type="date" placeholder="@ResourceWeb.LbTransactionDate ...." class="form-control"></input>
                                            <span asp-validation-for="@Model.PurchaseDocumentation.TransactionDate" class="text-danger"></span>
                                        </div>
                                    </div>


                                </div>
                            </div>



                            <div class="checkbox margin-bottom-20">
                                <div class="switch success"><input type="checkbox" asp-for="@Model.PurchaseDocumentation.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

