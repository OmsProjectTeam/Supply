@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddScrapingHtmlTitle;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-xs-12">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/

            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="ScrapingHtmlTitle" asp-action="MyScrapingHtmlTitle"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBMyScrapingHtmlTitle</button></a></li>/
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBAddScrapingHtmlTitle</button></a></li>
            <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
        </ul>

        <div class="row small-spacing">
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.LBEmageSise</h4>

                    <div class="card-content">
                        <form role="form" method="post" asp-controller="ScrapingHtmlTitle" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.ScrapingHtmlTitle.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.ScrapingHtmlTitle.IdScrapingHtmlTitle" class="form-control">
                                <input type="hidden" asp-for="@Model.ScrapingHtmlTitle.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            </div>



                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.ScrapingHtmlTitle.ScrapingHtmlTitle" for="exampleInputEmail1">@ResourceWeb.LbScrapingHtmlTitle</label>
                                            <input asp-for="@Model.ScrapingHtmlTitle.ScrapingHtmlTitle" type="text" placeholder="@ResourceWeb.LbScrapingHtmlTitle ...." class="form-control" maxlength="100">
                                            <span asp-validation-for="@Model.ScrapingHtmlTitle.ScrapingHtmlTitle" class="text-danger"></span>
                                            <span style="color:red"><strong>@TempData["ScrapingHtmlTitle"]</strong></span>
                                        </div>
                                    </div>

                       


                                </div>
                            </div>



                            <div class="checkbox margin-bottom-20">
                                <div class="switch success"><input type="checkbox" asp-for="@Model.ScrapingHtmlTitle.Active" id="switch-9" checked="checked"><label for="switch-9">@ResourceWeb.LbActive</label></div>
                            </div>


                            <div class="checkbox margin-bottom-20" style="display:none;">
                                <div class="switch success"><input type="checkbox" asp-for="@Model.ScrapingHtmlTitle.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
}
